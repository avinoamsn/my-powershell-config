{
	"$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
	"version": 2,
	"final_space": true,
	"console_title_template": "{{ .Folder }}",
	"blocks": [
		{
			"type": "prompt",
			"alignment": "left",
			"segments": [
				{
					"type": "text",
					"style": "plain",
					"template": "\n"
				},
				{
					"type": "os",
					"style": "powerline",
					"foreground": "#080808",
					"background": "#CCCCCC",
					"template": " {{ if .WSL }}WSL at {{ end }}{{.Icon}} ",
					"properties": {
						"windows": "\ue70f"
					}
				},
				{
					"type": "path",
					"style": "powerline",
					"powerline_symbol": "\ue0b0",
					"foreground": "#e4e4e4",
					"background": "#0037DA",
					"template": " \uf07c {{ .Path }} ",
					"properties": {
						"home_icon": "~",
						"style": "powerlevel"
					}
				},
				{
					"type": "git",
					"style": "powerline",
					"powerline_symbol": "\ue0b0",
					"foreground": "#0C0C0C",
					"background": "#13A10E",
					"background_templates": [
						"{{ if or (.Working.Changed) (.Staging.Changed) }}#C19C00{{ end }}"
					],
					"template": " {{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Staging.Changed) (.Working.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }} ",
					"properties": {
						"branch_icon": "\uf126 ",
						"fetch_stash_count": true,
						"fetch_status": true,
						"fetch_upstream_icon": true,
						"fetch_worktree_count": true
					}
				}
			]
		},
		{
			"type": "rprompt",
			"segments": [
				{
					"type": "exit",
					"style": "powerline",
					"powerline_symbol": "\ue0b2",
					"invert_powerline": true,
					"foreground": "#C19C00",
					"background": "#0C0C0C",
					"background_templates": ["{{ if gt .Code 0 }}#C50F1F{{ end }}"],
					"template": " {{ if gt .Code 0 }}<#C19C00>✘ </> {{ .Code }}{{ else }}<#13A10E>✔</>{{ end }} ",
					"properties": {
						"always_enabled": true,
						"display_exit_code": true
					}
				},
				{
					"type": "executiontime",
					"style": "powerline",
					"powerline_symbol": "\ue0b2",
					"invert_powerline": true,
					"foreground": "#0C0C0C",
					"background": "#C19C00",
					"template": " {{ .FormattedMs }} \uf252 "
				},
				{
					"type": "root",
					"style": "powerline",
					"powerline_symbol": "\ue0b2",
					"invert_powerline": true,
					"foreground": "#C50F1F",
					"background": "#0C0C0C",
					"template": " \uf0e7 ",
					"properties": {
						"root_icon": "\uf132"
					}
				},
				{
					"type": "time",
					"style": "powerline",
					"powerline_symbol": "\ue0b2",
					"invert_powerline": true,
					"foreground": "#0C0C0C",
					"background": "#CCCCCC",
					"template": " {{ .CurrentDate | date .Format }} \uf017 ",
					"properties": {
						"time_format": "15:04:05"
					}
				},
				{
					"type": "text",
					"style": "powerline"
				}
			]
		}
	],
	"transient_prompt": {
		"foreground": "#5FD700",
		"background": "transparent",
		"template": "❯"
	}
}
